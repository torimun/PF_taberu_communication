<div class="container mt-2 border border-secondary">
  <div class="row border border-secondary">
    <div class="col-lg-2 p-1 d-flex align-items-center">
      <div>ユーザー名：</div>
    </div>
    <div class="col-lg-2 p-1 d-flex align-items-center border-right border-secondary">
      <%= @post.customer.user_name %>
    </div>
    <div class="col-lg-2 p-1  border-right border-secondary">
      <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>
    </div>

    <div class="col-lg-1">
      <p class="text-center">タグ：</p>
    </div>

    <% @post.tags.each do |tag| %>
    <div class="col ">
      <%# タグを展開 %>
        <p class="text-center">#
          <%= tag.tag %>
        </p>
    </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <% @post.images.each do |image|%>
    <div class="col-lg-3 m-3">
        <%= image_tag image, size: '150x150' %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-2 p-1 border border-secondary">
      <div>・ジャンル</div>
    </div>
    <% if @post.genre == nil %>
    <div class="col-lg-10 p-1 border border-secondary">
      <p>記載はありません<p>
    </div>
    <% else %>
    <div class="col-lg-10 p-1 border border-secondary">
      <%= @post.genre %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-lg-2 p-1 border border-secondary">
      <div>・コメント</div>
    </div>
    <div class="col-lg-10 p-1 border border-secondary">
      <%= @post.comment %>
    </div>
  </div>
</div>

<div class="container my-4 py-4 border border-secondary">
  <div class="row">
    <div class="col-lg-6">
      <p>コメント総数：<%= @comments.count %>件</p>
    </div>
  </div>
  <div class="row m-2 p-3 justify-content-center">
    <div class="col-lg-10">
      <%= form_with model:[@post, @comment], url: customers_post_comments_path(@post.id)  do |f| %>
        <div class="row justify-content-center">
          <p>コメント投稿は下の投稿欄からどうぞ！</p>
        </div>
        <div class="row my-1 justify-content-center">
          <%= f.text_area :comment, rows: '2',  placeholder: "コメントはこちら", class: 'w-100' %>
        </div>
        <div class="row mt-3 justify-content-center">
          <%= f.hidden_field :post_id, value: @post.id %>
          <%= f.submit "送信する", class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>
  </div>
  <div class="row mx-4 justify-content-center border border-secondary">
    <div class="col-lg-8">
      <div class="row my-2 justify-content-center">
        <p>以下コメント欄</p>
      </div>

      <% if @comments.count == 0 %>
        <div class="row justify-content-center">
          <p>投稿されたコメントは現在ありません</p>
        </div>
      <% else %>
        <div class="row">
          <div class="col m-2 py-2 border border-info">
            <% @comments.each do |post_comment| %>
            <div class="row">
              <div class="col-lg-2">
                <%= post_comment.customer.user_name %>
              </div>
              <div class="col-lg-2">
                <%= post_comment.created_at.strftime('%Y/%m/%d') %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-2">
                <p>コメント</p>
              </div>
              <div class="col-lg-9">
                <%= post_comment.comment %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>