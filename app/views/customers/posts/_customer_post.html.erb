<div class="container my-2 border border-secondary">
  <div class="row border border-secondary">
    <div class="col-lg-2 p-1 d-flex align-items-center">
      <div>ユーザー名：</div>
    </div>
    <div class="col-lg-2 p-1 d-flex align-items-center border-right border-secondary">
      <%= @post.customer.user_name %>
    </div>
    <div class="col-lg-2 p-1  border-right border-secondary">
      <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>
    </div>

    <div class="col-lg-1">
      <p class="text-center">タグ：</p>
    </div>

    <% @post.tags.each do |tag| %>
    <div class="col ">
      <%# タグを展開 %>
        <p class="text-center">#
          <%= tag.tag %>
        </p>
    </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <% @post.images.each do |image|%>
    <div class="col-lg-3 p-2 m-3">
        <%= image_tag image, size: '300x250' %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-2 p-1 border border-secondary">
      <div>・ジャンル</div>
    </div>
    <% if @post.genre.empty? %>
      <div class="col-lg-10 p-1 border border-secondary">
        <div>記載はありません</div>
      </div>
    <% else %>
      <div class="col-lg-10 p-1 border border-secondary">
        <%= @post.genre %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-2 p-1 border border-secondary">
      <div>・コメント</div>
    </div>
    <div class="col-lg-10 p-1 border border-secondary">
      <%= @post.comment %>
    </div>
  </div>
</div>