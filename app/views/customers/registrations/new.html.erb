<main>
  <div class="container">
    <div class="row my-2">
      <div>
        <h4>新規登録</h4>
      </div>
    </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="row mb-1">
      <div class="col-lg-3">
        <%= f.label :ユーザー名 %>
      </div>
      <div class="col-lg-3">
        <p><%= f.text_field :user_name, autocomplete: "user_name" %><p>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-lg-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-lg-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-lg-3">
        <%= f.label :パスワード（６文字以上） %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>characters minimum)</em>
      <% end %>
      </div>
      <div class="col-lg-3">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

   <div class="row mb-2">
      <div class="col-lg-3">
        <%= f.label :パスワード（確認用） %>
      </div>
      <div class="col-lg-3">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row my-3 justify-content-center">
      <div class="col-lg-3">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="container">
    <div class="row">
      <h4>既に登録済みの方</h4>
    </div>
    <div class="row">
      <div class="col-lg-6 justify-content-center">
        <p>
          <%= link_to "こちら", customer_session_path %>
          からログインして下さい</p>
      </div>
    </div>
  </div>
</main>

<%= render "customers/shared/links" %>