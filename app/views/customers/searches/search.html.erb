<div class="container px-3 my-5">
  <% if @range == "Customer" %>
    <% if @customers.count == 0 %>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6 justify-content-center">
            <h3>会員検索結果</h3>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-lg-6 justify-content-center">
            <p>
              申し訳ありません。</br>
              指定された条件から検索した結果、</br>
              一致する条件はありませんでした。
            </p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row mb-3">
        <h3>会員検索結果</h3>
      </div>
      <% @customers.each do |customer| %>
        <div class="row p-2 border border-primary">
          <div class="col-lg-9 justify-content-center">
            <div class="row justify-content-center">
              <div class="col-lg-2 justify-content-center border border-secondary">
                <p>ユーザー名</p>
              </div>
              <div class="col-lg-8 justify-content-center border border-secondary">
                <p><%= customer.user_name %></p>
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="col-lg-2 justify-content-center border border-secondary">
                <p>自己紹介文</p>
              </div>
              <div class="col-lg-8 justify-content-center border border-secondary">
                <p><%= customer.introduction %></p>
              </div>
            </div>
          </div>
          <div class="col-lg-3 justify-content-center">
        <div class="row mt-3 p-1 justify-content-center">
          <div class="col-lg-8">
            <%= link_to "会員のプロフィール画面へ", customers_path(customer.id), class: "btn btn-success" %>
          </div>
        </div>
      </div>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <% if @posts.count == 0 %>
      <div class="row">
          <h3>投稿検索結果</h3>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-6 justify-content-center">
          <p>
            申し訳ありません。</br>
            指定された条件から検索した結果、</br>
            一致する条件はありませんでした。
          </p>
        </div>
      </div>
    <% else %>
      <div class="container">
        <div class="row mb-3">
          <h3>投稿検索結果</h3>
        </div>
      </div>
      <%= render partial: 'customers/members/post', collection: @posts %>
    <% end %>
  <% end %>
</div>