<div class="container my-3">
  <div class="row">
    <h3><%= @himself %>　さんのいいね一覧ページ</h3>
  </div>
  <div class="row my-3 justify-content-center">
    <div class="col-lg-8 text-center justify-content-center">
      <% if @posts.count == 0 %>
        <h4>現時点では、いいねした投稿はありませんでした。</br>
            他の方の投稿にいいね！をしてみましょう！</h4>
      <% end %>
    </div>
  </div>
</div>

<% @posts.each do |post|%>
  <div class="container my-2 rounded border border-secondary">
    <%= link_to customers_post_path(post.id), class: "text-secondary text-decoration-none" do %>
    <div class="row border border-secondary">
      <div class="col-lg-2 p-1 d-flex align-items-center">
        <div>ユーザー名：</div>
      </div>
      <div class="col-lg-2 p-1 d-flex align-items-center border-right border-secondary">
        <%= post.customer.user_name %>
      </div>
      <div class="col-lg-2 p-1  border-right border-secondary">
        <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
      </div>

      <div class="col-lg-1">
        <p class="text-center">タグ：</p>
      </div>

      <% post.tags.each do |tag| %>
      <div class="col ">
        <%# タグを展開 %>
          <p class="text-center">#
            <%= tag.tag %>
          </p>
      </div>
      <% end %>
    </div>

    <div class="row justify-content-center">
      <% post.images.each do |image|%>
      <div class="col-lg-3 m-3">
          <%= image_tag image, size: '150x150' %>
      </div>
      <% end %>
    </div>


    <div class="row">
      <div class="col-lg-2 p-1 border border-secondary">
        <div>・ジャンル</div>
      </div>
      <% if post.genre == nil %>
      <div class="col-lg-10 p-1 border border-secondary">
        <p>記載はありません<p>
      </div>
      <% else %>
      <div class="col-lg-10 p-1 border border-secondary">
        <%= post.genre %>
      </div>
    </div>
    <% end %>

    <div class="row">
      <div class="col-lg-2 p-1 border border-secondary">
        <div>・コメント</div>
      </div>
      <div class="col-lg-10 p-1 border border-secondary">
        <%= post.comment %>
      </div>
    </div>
  <% end %>
  </div>
<% end %>