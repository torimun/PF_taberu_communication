<div class="container mt-2 p-2 border border-secondary justify-content-center">
  <div class="row my-2">
    <div class="col-lg-4">
      <h3>タグ一覧検索画面</h3>
    </div>
  </div>

  <div class="row m-2 border border-secondary justify-content-center">
    <% @tags.each do |all_tag|%>
      <div class="col-lg-2 m-2 d-flex flex-wrap justify-content-center">
        <%= link_to customers_tag_show_path(all_tag.id), class: 'btn btn-outline-primary w-100' do %>
          <%= all_tag.tag %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
