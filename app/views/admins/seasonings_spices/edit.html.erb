<div class="container p-3 m-5 border border-secondary">
    <div class="row my-3 text-center justify-content-center">
      <h3>投稿編集画面</h3>
    </div>
    <%= form_with model: @seasoning_spice, url: admins_seasonings_spice_path, method: :patch do |f| %>
      <div class="row my- justify-content-center">
        <div class="col-lg-3">
            <%= f.label :写真を選択して下さい %>
        </div>
        <div class="col-lg-6">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
          <%= f.label :分類 %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :classification, class: 'w-75' %>
        </div>
      </div>

      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
          <%= f.label :名前 %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :name, class: 'w-75' %>
        </div>
      </div>

      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
            <%= f.label :詳細 %>
        </div>
        <div class="col-lg-6">
        <%= f.text_area :detail, size: '6x6', class: 'form-control' %>
        </div>
      </div>

      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
            <%= f.label :用途 %>
        </div>
        <div class="col-lg-6">
          <%= f.text_area :usega, size: '6x3', class: 'form-control' %>
        </div>
      </div>

      <div class="row my-5 justify-content-center">
        <div class="col-lg-3 text-center">
          <%= link_to "詳細画面へ戻る", :back, class: "btn btn-primary" %>
        </div>
        <div class="col-lg-3 text-center">
          <%= f.submit :変更する, class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>