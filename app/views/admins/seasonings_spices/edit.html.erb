<div class="container p-3 m-5 border border-secondary">
    <div class="row my-3 text-center justify-content-center">
      <h3>投稿編集画面</h3>
    </div>
    <div class="row my-3 justify-content-center">
      <div class="col-lg-10 text-center">
        <% if @seasoning_spice.errors.any? %>
          <%= @seasoning_spice.errors.count %>件のエラーが発生しました
            <% @seasoning_spice.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        <% end %>
      </div>
    </div>
    <%= form_with model: @seasoning_spice, url: admins_seasonings_spice_path, method: :patch do |f| %>
      <div class="row my- justify-content-center">
        <div class="col-lg-3">
            <%= f.label :写真を選択して下さい（image） %>
        </div>
        <div class="col-lg-6">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
          <%= f.label :分類（classification） %>
        </div>
        <div class="col-lg-6">
          <%= f.radio_button :classification, "調味料" %>
          <%= f.label :調味料 %>

          <%= f.radio_button :classification, "香辛料" %>
          <%= f.label :香辛料 %>

          <%= f.radio_button :classification, "ハーブ類" %>
          <%= f.label :ハーブ類 %>
        </div>
      </div>

      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
          <%= f.label :名前（name） %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :name, class: 'w-75' %>
        </div>
      </div>

      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
            <%= f.label :詳細（detail） %>
        </div>
        <div class="col-lg-6">
        <%= f.text_area :detail, size: '6x6', class: 'form-control' %>
        </div>
      </div>

      <div class="row my-2 justify-content-center">
        <div class="col-lg-3">
            <%= f.label :用途（usega） %>
        </div>
        <div class="col-lg-6">
          <%= f.text_area :usega, size: '6x3', class: 'form-control' %>
        </div>
      </div>

      <div class="row my-5 justify-content-center">
        <div class="col-lg-3 text-center">
          <%= link_to "詳細画面へ戻る", :back, class: "btn btn-primary" %>
        </div>
        <div class="col-lg-3 text-center">
          <%= f.submit :変更する, class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>